<script>

    // Send Message
    $("#submitButton").click(() => {
        let MessageObject = {
            FullName: $("#name").val(),
            Email: $("#email").val(),
            Phone: $("#phone").val(),
            Message: $("#message").val()
        };
        $.ajax({
            url: '/Main/SendMessage',
            type: 'POST',
            data: MessageObject,
            success: function (data) {
                if (data.data == true) {
                    Swal.fire({
                        title: 'Your Message Has Been Sent Successfully',
                        showClass: {
                            popup: 'animate__animated animate__fadeInDown'
                        },
                        hideClass: {
                            popup: 'animate__animated animate__fadeOutUp'
                        }
                    })
                }
            }
        });

        $("#name").val("");
        $("#email").val("");
        $("#phone").val("");
        $("#message").val("");
    });

    // Click Count
    $(".BtnCount").click(() => {
        $.ajax({
            url: '/Main/IncreaseDownloadCount',
            type: "POST",
            success: function (data) {
                $("#spanCount").html(`Resume Downloaded <b>` + data.data + `</b> Times`);
                Swal.fire({
                    title: 'Resume Download Has Been Successfully',
                    showClass: {
                        popup: 'animate__animated animate__fadeInDown'
                    },
                    hideClass: {
                        popup: 'animate__animated animate__fadeOutUp'
                    }
                })
            }
        });
    });

    
</script>
